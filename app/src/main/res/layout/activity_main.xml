<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/carBrandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери бренд автомобиля"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bodyPartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери часть автомобиля"
        android:layout_marginTop="24dp"
        android:layout_below="@id/carBrandButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/damageTypeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери тип повреждения"
        android:layout_marginTop="24dp"
        android:layout_below="@id/bodyPartButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стоимость ремонта"
        android:layout_marginTop="24dp"
        android:layout_below="@id/damageTypeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
    android:layout_below="@id/calculateButton"
    android:layout_centerHorizontal="true" />

</RelativeLayout>